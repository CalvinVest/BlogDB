@model BlogDB.Core.Post
<h1>Add new Post</h1>
@using (Html.BeginForm("AddPostResult","Home",FormMethod.Post,new {@class= "form-inline"}))
{

    <div class="row">
        <div class="col-md-12 input-group">
            @Html.TextBoxFor(m => m.Title, new {@class="form-control valid",@data_val = "true", @data_val_required = "Title is required"})
            @Html.TextBoxFor(m => m.Author, new {@class="form-control"})
            @Html.TextAreaFor(m => m.Body, new {@class="form-control", rows="5"})
            <input type="submit" class="btn btn-default box-shadow-4dp" value="Add Post" />
        </div>
    </div>

}

@await Html.PartialAsync("BackButton")