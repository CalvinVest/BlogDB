@model BlogDB.Core.Post
@using (Html.BeginForm("EditPostResult","Home",FormMethod.Post,new {postid=Model.PostID, @class= "form-inline"}))
{

    <div class="row">
        <div class="col-md-12 input-group">
            @Html.HiddenFor(m => m.PostID)
            @Html.TextBoxFor(m => m.Title, new {@class="form-control"})
            @Html.TextBoxFor(m => m.Author, new {@class="form-control"})
            @Html.TextAreaFor(m => m.Body, new {@class="form-control", rows="5"})
            <input type="submit" class="btn btn-default box-shadow--4dp" value="Submit" />
        </div>
    </div>

}

<br></br>
@await Html.PartialAsync("BackButton")